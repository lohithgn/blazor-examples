<CodeViewer>
    <div class="tab-pane fade show active" id="nav-view" role="tabpanel" aria-labelledby="nav-view-tab">
        <div class="card bg-light mb-3">
            <div class="card-body">
                <pre>
&lt;p&gt;
    New Item : &lt;input bind="@@ItemToAdd" /&gt;
    &lt;button onclick="@@AddItem"&gt;Add&lt;/button&gt;
&lt;/p&gt;
&lt;p&gt;
    Your Items:
&lt;/p&gt;
&lt;select multiple&gt;
    @@foreach(var item in Items)
    {
        &lt;option vaue="@@item"&gt;@@item&lt;/option&gt;
    }
&lt;/select&gt;    
</pre>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="nav-model" role="tabpanel" aria-labelledby="nav-model-tab">
        <div class="card bg-light mb-3">
            <div class="card-body">
<pre>
public List&lt;string&gt; Items { get; set; } = new List&lt;string&gt;() { "Alpha", "Beta", "Gamma" };
public string ItemToAdd { get; set; }
public void AddItem()
{
    if(!string.IsNullOrEmpty(ItemToAdd))
    {
        Items.Add(ItemToAdd);
        ItemToAdd = string.Empty;
    }
}    
</pre>
            </div>
        </div>
    </div>
</CodeViewer>
